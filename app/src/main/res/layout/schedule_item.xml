<android.support.constraint.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="0dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:layout_height="50dp"
    tools:layout_editor_absoluteY="0dp"
    android:background="#fff"
    tools:layout_editor_absoluteX="8dp"
    android:layout_weight="0.06"
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="12:00"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginRight="7dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/lesson_name"
            android:layout_marginLeft="8dp"
            android:id="@+id/start_time"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="7dp"
            app:layout_constraintHorizontal_bias="1.0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="15:00"
            app:layout_constraintLeft_toRightOf="@+id/lesson_name"
            android:layout_marginLeft="8dp"
            android:id="@+id/finish_time"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@+id/room_text"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.925" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="А-12"
            android:id="@+id/room_text"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lesson_name"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintRight_toLeftOf="@+id/finish_time"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Блажко Н.И."
            app:layout_constraintBottom_toBottomOf="@+id/room_text"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lesson_name"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:id="@+id/teacher_name"
            android:layout_marginStart="16dp" />

        <TextView
            android:layout_width="326dp"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="20sp"
            tools:text="Математический анализ"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:id="@+id/lesson_name"
            android:layout_marginStart="16dp" />


    </android.support.constraint.ConstraintLayout>
