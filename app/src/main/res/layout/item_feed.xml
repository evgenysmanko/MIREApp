<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/feed_card_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/wall_date_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="14 Фев 21:00"
                    android:gravity="right"
                    />


                <TextView
                    android:id="@+id/wall_textView"
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:text="Мне давно было интересно, как птицы находят дорогу, а муравьи идут по следу. Я не делал об этом Топлес) А недавно, ребята из проекта [club157572003|Открытая лабораторная]"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@android:color/black"
                    android:textSize="14.5sp"
                    />

                <TextView
                    android:id="@+id/show_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="Показать полностью"
                    android:textAlignment="center"
                    android:visibility="gone" />



            </LinearLayout>

            <ImageView
                android:id="@+id/wall_imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop" />


        </LinearLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>